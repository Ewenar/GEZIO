                        app:cardBackgroundColor="#FFBE58"
                        app:cardCornerRadius="16dp"
                        tools:ignore="TouchTargetSizeCheck">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
